<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-3 py-2 bg-zinc-800" type="text" placeholder="Tilte goes here" name="title" required>
                <textarea class="block w-full rounded-md outline-none mt-2 px-3 py-2 bg-zinc-800 resize-none" placeholder="Write your task details here" name="details" required></textarea>
                <input type="submit" value="Create Task" class="mt-2 bg-blue-600 px-4 py-2 rounded-md">
            </form>
        </div>
        <div class="task p-10 flex gap-3 flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 rounded-md px-4 py-2 bg-zinc-800" >
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex  mt-3 justify-between item-center w-full">
                            <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read More.</a>
                            <a class="text-zinc-500" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>

                <% }) %>

            <% } else { %>
                <h3 class="text-white bg-blue-500 rounded-md px-3 py-2">No task yet.</h3>
            <% } %>
            
        </div>
    </div>
    

    <script src="/javascripts/script.js"></script>
</body>
</html>